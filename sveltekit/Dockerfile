FROM node:20-alpine AS dev

WORKDIR /app

ENV ENV	${ENV}
ENV DOMAIN ${DOMAIN}
ENV NESTAPI_SERVER_URL ${NESTAPI_SERVER_URL}
ENV NESTAPI_CLIENT_URL ${NESTAPI_CLIENT_URL}
ENV PUBLIC_NESTAPI_CLIENT_URL ${NESTAPI_CLIENT_URL}
ENV SVELTEKIT_SERVER_URL ${SVELTEKIT_SERVER_URL}
ENV SVELTEKIT_CLIENT_URL ${SVELTEKIT_CLIENT_URL}
ENV PUBLIC_SVELTEKIT_CLIENT_URL ${SVELTEKIT_CLIENT_URL}

ENV NODE_ENV=development

ENTRYPOINT npm run dev -- --host
